<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="#ff9100" />
            <gradient android:angle="-90" android:startColor="#ff9100" android:endColor="#ff9100"
                />


        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="#de7717" />
            <solid android:color="#de7717"
               />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <stroke android:width="5dp" android:color="#ff9100" />
            <gradient android:angle="-90" android:startColor="#ff9100" android:endColor="#ff9100" />
        </shape>
    </item>


</selector>