<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.enesimona30.licenta1.ResultActivity"
    android:background="@drawable/background2">

    <TextView
        android:id="@+id/tv_result_puncte_obtinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="123dp"
        android:textSize="20dp"
        android:text="Puncte obtinute: "
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_result_puncte_cumulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_result_puncte_obtinute"
        android:layout_alignStart="@+id/tv_result_puncte_obtinute"
        android:layout_below="@+id/tv_result_puncte_obtinute"
        android:layout_marginTop="37dp"
        android:textSize="20dp"
        android:text="Puncte cumulate: "
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_result_cumulare"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:text="Cumulare"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:background="@drawable/custom_button1"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"/>

    <Button
        android:id="@+id/btn_result_reducere"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_result_cumulare"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_toEndOf="@+id/btn_result_cumulare"
        android:layout_toRightOf="@+id/btn_result_cumulare"
        android:text="Consumare"
        android:background="@drawable/custom_button1"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/tv_result_valoare_nota"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_result_puncte_obtinute"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_result_puncte_obtinute"
        android:layout_marginTop="60dp"
        android:text="Valoare nota:"
        android:textStyle="bold"/>



</RelativeLayout>
