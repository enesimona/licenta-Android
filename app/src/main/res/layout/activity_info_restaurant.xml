<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <RelativeLayout
    android:id="@+id/activity_info_restaurant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@drawable/background2">

    <Gallery
        android:id="@+id/gallery_info_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gallery_info_restaurant"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_info_restaurant_nume"
        android:textSize="36dp"
        android:textStyle="bold"/>

    <RatingBar
        android:id="@+id/ratingBar_info_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_below="@id/tv_info_restaurant_nume"
        android:layout_marginTop="10dp"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="44dp"
        style="@style/customRatingBar"
        />


    <TextView
        android:text="@string/info_restaurant_info_aditionale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar_info_restaurant"
        android:layout_alignLeft="@+id/tv_info_restaurant_nume"
        android:layout_alignStart="@+id/tv_info_restaurant_nume"
        android:layout_marginTop="31dp"
        android:id="@+id/tv_info_restaurant_info_aditionale"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_info_restaurant_info_aditionale"
        android:layout_alignLeft="@+id/tv_info_restaurant_nume"
        android:layout_alignStart="@+id/tv_info_restaurant_nume"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_info_restaurant_adresa" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_info_restaurant_adresa"
        android:layout_alignLeft="@+id/tv_info_restaurant_adresa"
        android:layout_alignStart="@+id/tv_info_restaurant_adresa"
        android:layout_marginTop="11dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_info_restaurant_nr_tel" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_info_restaurant_nr_tel"
        android:layout_alignLeft="@+id/tv_info_restaurant_nr_tel"
        android:layout_alignStart="@+id/tv_info_restaurant_nr_tel"
        android:layout_marginTop="11dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/tv_info_restaurant_web_uri" />


        </RelativeLayout>

            <fragment
                android:id="@+id/info_restaurant_map"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="top"
                class="com.google.android.gms.maps.MapFragment"
            />

        <Button
            android:id="@+id/btn_info_restaurant_rezerva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rezerva Masa"
            android:background="@drawable/custom_button1"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"/>

    </LinearLayout>

</ScrollView>
